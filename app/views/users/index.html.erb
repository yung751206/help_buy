<% provide(:title, "All Users") %>
<div class="container">
	<h1>All Users</h1>

	<table class="table table-hover">
		<thead>
			<tr>
				<th>Login</th>
				<th>Full Name</th>
				<th>Address</th>
				<th>Phone</th>
				<th></th>		
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
				<tr>
					<td><%=link_to user.login, user_path(user)%></td>
					<%if (user.customer_first_name != nil && user.customer_last_name != nil) %>
						<td><%=user.customer_first_name + " " + user.customer_last_name%></td>
					<% else %>
						<td></td>
					<% end %>
					<td><%=user.customer_address %></td>
					<td><%=user.customer_phone %></td>
					<td><%= link_to 'Delete', user, method: :delete, data:{ confirm: "Are you sure?" } %>
				</tr>
			<% end %>
		</tbody>
	</table>
	<%= will_paginate %>
</div>