<% provide(:title, "All Users") %>
<div class="container">
	<h1>All Users</h1>

	<table class="table table-hover">
		<thead>
			<tr>
				<th>User ID</th>
				<th>Login</th>
				<th>Email</th>		
				<th></th>		
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
				<tr>
					<td><%=link_to user.id, user_path(user) %></td>
					<td><%=user.login %></td>
					<td><%=user.email %></td>
					<td><%= link_to 'Delete', user, method: :delete, data:{ confirm: "Are you sure?" } %>
				</tr>
			<% end %>
		</tbody>
	</table>
	<%= will_paginate %>
</div>