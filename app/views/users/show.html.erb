<% provide(:title, "User Info") %>
<div class="container jumbotron">
	<h1>User Information</h1>
	<div class="row">
		<div class="col-md-4">Login: <%=@user.login %></div>
		<div class="col-md-4">Customer First Name: <%=@user.customer_first_name %></div>
		<div class="col-md-4">Customer Last Name: <%=@user.customer_last_name %></div>
	</div>
	<div class="row">
		<div class="col-md-4">Customer Address: <%=@user.customer_address%></div>
		<div class="col-md-4">Customer Phone: <%=@user.customer_phone %></div>
	</div>

	<br/>
	
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Order ID</th>
				<th>Price</th>
				<th>Origin</th>
				<th>Status</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @orders.each do |order| %>
				<tr>
					<td><%=link_to order.id, order_path(order) %></td>
					<td><%=order.price %></td>
					<td><%=Order.from_to_description order.origin %></td>
					<td><%=Order.order_status_to_description order.status %></td>
					<td><%= link_to 'Delete', order, method: :delete, data:{ confirm: "Are you sure?" } %>
				</tr>
			<% end %>
		</tbody>
	</table>

	<div class="row">		
		<div class="col-md-4">
			<%= link_to "Edit User", '#', class: "btn btn-primary" %>
		</div>
	</div>
</div>