<div class="row">
  <div class="col-md-6 col-md-offset-3">	
    <%= form_for @order do |f| %>
      <h3>Order information:</h3>   
      <%= render 'shared/error_messages' %>   
      <div class="row">
    		<div class="col-sm-3">
      		<%= f.label :InternationalShippingFee, "國際運費" %>
      		<%= f.number_field :InternationalShippingFee, :step => 0.01 %>
      	</div>
        <div class="col-sm-3">
       	 	<%= f.label :DomesticShippingFee, "國內運費" %>
        	<%= f.number_field :DomesticShippingFee, :step => 0.01 %>
       	 </div>
  			<div class="col-sm-3">
       	 <%= f.label :ExchangeRate, "匯率" %>
       	 <%= f.number_field :ExchangeRate, :step => 0.01 %>
  			</div>
  			<div class="col-sm-3">
        	<%= f.label :Price, "售價" %>
        	<%= f.number_field :Price, :step => 0.01%>
        </div>
      </div>
      <div class="row">
    		<div class="col-sm-3">
      		<%= f.label :Refund, "餘額" %>
      		<%= f.number_field :Refund, :step => 0.01 %>
      	</div>
        <div class="col-sm-3">
       	 	<%= f.label :CompletedDate, "完成日期" %>
        	<%= f.date_field :CompletedDate %>
       	</div>	
      </div>

      <div class="row">
     		<div class="col-sm-12">
   				<label>賣場:</label>
   				<br/>
  		    <%= f.radio_button :From, Order.description_to_from(Order::FACEBOOK) %> 
    			<%= f.label :FromFacebook, Order::FACEBOOK %>
    			&nbsp;
    			<%= f.radio_button :From, Order.description_to_from(Order::PTT) %>
    			<%= f.label :FromPTT, Order::PTT %>
    			&nbsp;
    			<%= f.radio_button :From, Order.description_to_from(Order::SHOP_EE) %>
    			<%= f.label :FromPTT, Order::SHOP_EE %>
  			</div>
      </div>

      <div class="row">
     		<div class="col-sm-12">
   				<label>狀態:</label>
   				<br/>
  		    <%= f.radio_button :Status, Order.description_to_order_status(Order::ORDERED) %> 
    			<%= f.label :Ordered, '已下訂' %>
    			&nbsp;
    			<%= f.radio_button :Status, Order.description_to_order_status(Order::ARRIVED_US) %>
    			<%= f.label :ArrivedUS, '已到貨' %>
    			&nbsp;
    			<%= f.radio_button :Status, Order.description_to_order_status(Order::SHIPPED) %>
    			<%= f.label :Shipped, '已寄台灣' %>
    			&nbsp;
    			<%= f.radio_button :Status, Order.description_to_order_status(Order::WAIT_CONFIRMED) %>
    			<%= f.label :WaitConfirmed, '等確認' %>  			
    			&nbsp;
    			<%= f.radio_button :Status, Order.description_to_order_status(Order::COMPLETED) %>
    			<%= f.label :Completed, '完成' %>	
  			</div>
      </div>

      <h3>Customer Information:</h3>  
      
      <div class="row">
        <div class="col-sm-4">
          <%= f.label :CustomerFirstName, "First Name" %>
          <%= f.text_field :CustomerFirstName%>
        </div>
         <div class="col-sm-4">
          <%= f.label :CustomerLastName, "Last Name" %>
          <%= f.text_field :CustomerLastName%>
        </div>
        <div class="col-sm-4">
          <%= f.label :CustomerPhone, "Phone Number" %>
          <%= f.text_field :CustomerPhone%>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12">
          <%= f.label :CustomerAddress, "Address" %>
          <%= f.text_field :CustomerAddress%>
        </div>
      </div>

      <h3>Item:</h3>
      <div class="row">
        <div class="col-sm-3">
          <%= f.label :Brand, "Brand" %>
          <%= f.text_field :Brand%>
        </div>
        <div class="col-sm-3">
          <%= f.label :Cost, "成本" %>
          <%= f.number_field :Cost, :step => 0.01%>
        </div>        
        <div class="col-sm-6">
          <%= f.label :Description, "描述" %>
          <%= f.text_field :Description %>
        </div>
      </div>

      <h3>User:</h3>
      <div class="row">
        <div class="col-sm-4">
          <%=label_tag 'Login' %>
          <%=text_field :user, :login%>          
        </div>
        <div class="col-sm-4">
          <%=label_tag 'Email' %>
          <%=text_field :user, :email%>          
        </div>
      </div>

      <%= f.submit yield(:btn_name), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>